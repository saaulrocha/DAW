Base de Datos: 

--- CREAR BASE DE DATOS ------> CREATE DATABASE nombreBD;
CREATE DATABASE nombreBD;

-- CREAR BASE DE DATOS SI NO EXISTE ------> CREATE DATABASE IF NOT EXISTS nombreBD;
CREATE DATABASE IF NOT EXISTS nombreBD;

--- VER BASES DE DATOS CREADAS ----> SHOW DATABASES;
SHOW DATABASES;

--- Seleccionar una BD ------> USE nombreBD
USE nombreBD

--- BORRAR BASE DE DATOS -----> DROP DATABASE nombreBD
DROP DATABASE nombreBD;

--- VER TABLAS DENTRO DE LA B.D SELECCIONADA ----> SHOW TABLES;
SHOW TABLES;


TABLAS: 

-- CREAR UNA TABLA ----> CREATE TABLE JUGADOR  (........);
    CREATE TABLE JUGADOR (
    CODIGO INT(4),
    DNI VARCHAR(9) NOT NULL,
    NOMBRE VARCHAR(50) NOT NULL,
    VIDAS INT NOT NULL DEFAULT 17,
    DISTANCIA_RECORRIDA FLOAT(7,2),
    SEXO ENUM('HOMBRE', 'MUJER', 'OTRO') NOT NULL DEFAULT 'OTRO',
    FECHA_INSCRIPCION DATETIME NOT NULL DEFAULT NOW(),
    ID_ARMA VARCHAR(10) NOT NULL,
    CONSTRAINT pk_JUGADOR PRIMARY KEY (CODIGO),
    CONSTRAINT UN_JUG_DNI UNIQUE(DNI),
    CONSTRAINT CHK_JUG_SEX CHECK(SEXO <> ''),                  <> -----> Significa distinto de dentro de un CHECK
    CONSTRAINT CHK_JUG_FIH CHECK (FECHA_INSCRIPCION >= '2000-01-01 17:00:17'),
    CONSTRAINT FK_JUG_ID_ARMA_NOM FOREIGN(ID_ARMA) REFERENCES ARMA(NOMBRE)
            ON DELETE CASCADE
            ON UPDATE CASCADE
);

-- ELIMINAR UNA TABLA ------> DROP TABLE nombre_tabla;
    DROP TABLE NOMBRE_TABLA;


-- MOSTRAR LAS CONSTRAINTS DE UNA TABLA -------> SHOW CREATE TABLE nombre_tabla;
SHOW CREATE TABLE nombre_tabla;

-- MOSTRAR LAS COLUMNAS Y TIPO DE DATOS DE UNA TABLA ------> DESC nombre_tabla
DESC nombre_tabla;

-- AGREGAR UNA COLUMNA A LA TABLA ----> ALTER TABLE
ALTER TABLE nombre_tabla
ADD COLUMN nombre_nueva_columna INT(7) NOT NULL;  ---->Se coloca en la última columna

ALTER TABLE nombre_tabla 
ADD COLUMN nombre_nueva_columna INT(7) NOT NULL AFTER NOMBRE_COLUMNA_EXISTENTE;   ---->Se coloca después de la columna existente

ALTER TABLE nombre_tabla 
ADD COLUMN nombre_nueva_columna INT(7) NOT NULL FIRST;  -----> Se coloca como primera columna de la tabla


--MODIFICAR EL TIPO DE DATO DE UNA COLUMNA O TABLA: 

ALTER TABLE nombre_de_tabla
MODIFY COLUMN NOMBRE_COLUMNA_EXISTENTE FLOAT(7,2) NOT NULL;

-- MODIFICAR EL NOMBRE O EL TIPO DE DATO DE UNA COLUMNA A LA TABLA

ALTER TABLE nombre_tabla
CHANGE NOMBRE_COLUMNA_NUEVA NOMBRE_COLUMNA_EXISTENTE INT(7) NOT NULL;

---ELIMINAR UNA COLUMNA A LA TABLA
ALTER TABLE NOMBRE_TABLA
DROP COLUMN NOMBRE_COLUMNA_EXISTENTE;

---AGREGAR UNA CONSTRAINT A LA TABLA

ALTER TABLE nombre_de_tabla
ADD CONSTRAINT NOMBRE_CONSTRAINT PRIMARY KEY(NOMBRE_COLUMNA); --PRIMARY KEY

ALTER TABLE nombre_de_tabla
ADD CONSTRAINT NOMBRE_CONSTRAINT UNIQUE(NOMBRE_COLUMNA); ---UNIQUE

ALTER TABLE NOMBRE_TABLA
ADD CONSTRAINT NOMBRE_CONSTRAINT FOREIGN KEY(NOMBRE_COLUMNA) REFERENCES NOMBRE_TABLA_REFERENCIA(NOMBRE_COLUMNA_REFERENCIA) ---FOREIGN KEY
    ON DELETE CASCADE 
    ON UPDATE CASCADE;

ALTER TABLE nombre_de_tabla
ADD CONSTRAINT NOMBRE_CONSTRAINT CHECK(CONDICION);   ---> CHECK

---ELIMINAR LA CONSTRAINT DE UNA TABLA

ALTER TABLE NOMBRE_TABLA
DROP NOMBRE_CONSTRAINT;

---INSERCIÓN DE TUPLAS O DATOS A LA TABLA

INSERT INTO TABLE(NIA,NOMBRE,SEXO, ID_ARMA) VALUES (...,...,...,...,) ---Puedes especificar en que columnas quieres insertar los datos de una tabla


--- MOSTRAR LAS TUPLAS O DATOS INSERTADOS EN LA TABLA 
SELECT COLUMNA1, COLUMNA2 FROM TABLA;   ---ESPECIFICAMOS QUE COLUMNAS

SELECT * FROM TABLA; ----MOSTRAMOS TODAS LAS COLUMNAS

--- DUPLICAR LA ESTRUCTURA DE UNA TABLA

CREATE TABLE NUEVA_TABLA LIKE TABLA_ORIGINAL;

---COPIAR LOS DATOS DE LA TABLA ORIGINAL A LA NUEVA TABLA

INSERT INTO NUEVA_TABLA SELECT * FROM TABLA_ORIGINAL;

---ACTUALIZAR DATOS DE UNA TABLA 
UPDATE NOMBRE_TABLA
SET NOMBRE_COLUMNA_EXISTENTE = Valor
WHERE CONDICIÓN;


---ELIMINAR LOS DATOS O TUPLAS DE UNA TABLA 

DELETE FROM NOMBRE_TABLA
WHERE CONDICION;












